  "type": "commonjs",
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/node": "^24.3.0",
    "esbuild": "^0.25.9",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "figlet": "^1.8.2",
    "inquirer": "^8.2.7",
    "node-fetch": "^3.3.2",
    "readline-sync": "^1.4.10"
  }

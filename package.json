{
  "name": "app",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "my-app": "app/appdist/index.js"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/index.js",
    "bundle": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --minify --sourcemap --tree-shaking --external:inquirer",
    "prod": "pkg dist/index.js --targets node16-macos-x64,node16-win-x64 --output app/my-app --assets 'dist/fonts/**/*'"
  },
  "pkg": {
    "scripts": "dist/index.js",
    "assets": [
      "app/app/dist/fonts/**/*"
    ]
  },
